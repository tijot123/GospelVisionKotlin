<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/more_bg"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/scheduled_item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/scheduled_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        <ToggleButton
                android:id="@+id/switch_state"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="end|center"
                android:layout_weight=".2"
                android:background="@android:color/transparent"
                android:button="@drawable/on_off_state"
                android:disabledAlpha="?android:attr/disabledAlpha"
                android:gravity="center"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>